%global debug_package %{nil}
%if 0%{?rhel} == 7 || 0%{?epel} == 7
%define _systemdgeneratordir /usr/lib/systemd/system-generators
%endif

Summary: A systemd timer unit example of port checker
Name:    @CPACK_PACKAGE_NAME@
Version: @CPACK_PACKAGE_VERSION@
Release: 1%{?dist}
License: MIT
URL: https://github.com/ssato/port-health-checker
Source0: %{url}/archive/RELEASE_%{version}.tar.gz
# TODO:
#Source0: %%{url}/archive/%%{version}/%%{name}-%%{version}.tar.gz
%{?systemd_requires}
BuildRequires: gcc
BuildRequires: gcc-c++
BuildRequires: cmake
BuildRequires: systemd
BuildArch:     noarch
Requires:      nmap-ncat
Requires:      systemd

%package       80-nginx
Summary:       A systemd timer unit to monitor HTTP port by nginx
Requires:      nginx
Requires:      %{name} = %{version}-%{release}

%description
A RPM package provides an example of systemd timer unit to check health of
given local port periodically.

%description   80-nginx
This package provides configuration to monitor HTTP (80/tcp) port listen by
nginx running on localhost.

%prep
%autosetup -n %{name}-%{version}

%build
%cmake .
%make_build

%install
%make_install

# FIXME:
(cd %{buildroot}/ && mv usr/etc/ ./)

%post
#%systemd_post port-health-checker@.timer
#systemctl start port-health-checker@.timer

%preun
#%systemd_preun port-health-checker@.timer

%postun
#%systemd_postun_with_restart port-health-checker@.timer

%files
%doc README.rst
%license LICENSE.MIT
%{_unitdir}/*@.*
%{_systemdgeneratordir}/*
%config /etc/%{name}/00_example.conf
%{_mandir}/man*/*

%files         80-nginx
%doc README.rst
%license LICENSE.MIT
%config /etc/%{name}/80.conf

